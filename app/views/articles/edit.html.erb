<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <%= flash[:success] %><br>
  <h1>記事の編集</h1>
    <%= form_with(model: @article, url: article_path(@article), local: true, method: :patch) do |f| %>
      
      <%= f.label :title, class: "label-form" %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :content, class: "label-form" %>
      <%= f.text_area :content, rows: 5, class: "form-control" %>
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", article_path(@article), class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>